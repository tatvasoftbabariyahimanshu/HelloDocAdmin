@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card bg-transparent mt-4 border-0 mb-3">
    <div class="row g-0 align-items-center">
        <div class="col-md-4 text-end">
            <img src="~/icons/AccessDenide.png" class="img-fluid rounded " style="width:300px;height:300px" alt="Access Denied">
        </div>
        <div class="col-md-8">
            <div class="card-body text-start">
                <h2 class="card-title"><b>Access Denied!!</b></h2>
                <h4 class="card-text">Sorry, you do not have permission to access this content.</h4>
                <p class="card-text"><small class="text-muted">Please contact your administrator for assistance.</small></p>
            </div>
        </div>
    </div>
</div>
