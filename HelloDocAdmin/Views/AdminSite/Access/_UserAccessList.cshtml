@using static HelloDocAdmin.Entity.ViewModels.AdminSite.Constant;
@{
    var enumData = from AccountType e in Enum.GetValues(typeof(AccountType))
                   select new
                   {
                       ID = (int)e,
                       Name = e.ToString()
                   };




}
@model HelloDocAdmin.Entity.ViewModels.AdminSite.UserAccessData;
<div class="table-responsive" id="tbl">
    <table id="myTable" class="table table-responsive mt-3 p-3">
        <thead class=" text-start tablehead">
            <tr>
                <th scope="col">Account Type</th>
                <th scope="col">Account POC</th>
                <th scope="col">Phone</th>
                <th scope="col">Open Request</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody class="table-group-divider mx-5">

            @foreach (var item in Model.List)
            {
                <tr class="@Enum.GetName(typeof(AccountType), item.accounttype)">
                    <td class="mobile-hide table-text" data-label="Current Status"> @Enum.GetName(typeof(AccountType), item.accounttype)</td>
                    <td scope="row" data-label="Created Date" class="table-text"> @item.FirstName</td>
                    <td scope="row" data-label="Created Date" class="table-text"> @item.Mobile</td>
                    @* <td scope="row" data-label="Created Date">  @Enum.GetName(typeof(AdminStatus), item.status)</td>*@
                    <td scope="row" data-label="Created Date" class="table-text"> @item.status Request</td>
                    <td class="mobile-hide" data-label="Document">
                        @if (item.isAdmin)
                        {
                            <a asp-action="AdminProfile" asp-controller="Access" asp-route-id="@item.aspnetuserid" class="btn btn-outline-info btn-sm document-button mx-1">
                                Edit
                            </a>
                        }
                        else
                        {
                            <a asp-action="PhysicianProfile" asp-controller="Physician" asp-route-id="@item.UserID" class="btn btn-outline-info btn-sm document-button mx-1">
                                Edit
                            </a>
                        }

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
@foreach (var item in Model.List)
{
    <div class="accordion-item text-secondary mt-2 " style="position:relative;" id="Acordiantable">
        <h2 class="accordion-header btn-i " id="flush-heading-@item.aspnetuserid">
            <div class="p-3 collapsed border-bottom" type="button" data-bs-toggle="collapse" data-bs-target="#flush-@item.aspnetuserid" aria-expanded="false" aria-controls="collapse_@item.aspnetuserid">
                <div class="d-flex text-dark align-items-center justify-content-between w-100">
                    <div class="text-start mb-3 h6">

                        <b mx-2>@item.FirstName</b>
                    </div>


                </div>
                <div class="d-flex row  text-dark justify-content-between w-100 mb-3 ">
                    <div class="text-start h6">
                        <small>Account Type : <b class="mx-1">@Enum.GetName(typeof(AccountType), item.accounttype)</b></small>
                    </div>

                </div>

            </div>
        </h2>

        <div id="flush-@item.aspnetuserid" class="accordion-collapse text-dark  position-relative  btn-i p-2 collapse mb-3 border-top" data-bs-parent="#accordionExample">

            <div class="accordion-body container-fluid">

                <p> <i class="fa fa-envelope border border-info rounded-pill p-1 me-2"></i><b>Phone :</b>  @item.Mobile</p>
                <p> <i class="fa fa-phone border  border-info rounded-pill p-1 me-2"></i><b> Status : </b> Active</p>
                <p> <i class="fa fa-phone border  border-info rounded-pill p-1 me-2"></i><b> Open Request : </b> @item.status Request</p>




                <div class="text-end d-md-flex justify-content-md-end">

                    @if (item.isAdmin)
                    {
                        <a class="btn btn-outline-info  text-info me-md-2 mb-2" asp-action="AdminProfile" asp-controller="Access" asp-route-id="@item.aspnetuserid">
                            Edit
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-outline-info  text-info me-md-2 mb-2" asp-action="PhysicianProfile" asp-controller="Physician" asp-route-id="@item.UserID">
                            Edit
                        </a>
                    }



                </div>
            </div>
        </div>

    </div>
}
<input type="hidden" id="crt-page" value="1" />
<div class="d-flex justify-content-between">
    <div class="text-start">

        <select id="SizeSelect" asp-for="pageSize" onchange="getfilterdata()" class="form-select">
            <
            <option value="10" selected>10</option>
            <option value="15">15</option>
            <option value="20">20</option>
        </select>
    </div>
    <div class="text-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item"><a class="page-link" onclick="getpage(@Model.CurrentPage-1); getfilterdata();">Previous</a></li>
                }

                @for (int i = Math.Max(1, (byte)Model.CurrentPage - 2); i <= Math.Min((byte)Model.TotalPage, (byte)Model.CurrentPage + 3); i++)
                {
                    <li class="page-item"><a class="page-link @(i == Model.CurrentPage ? "active" : "")" onclick="getpage(@i); getfilterdata();">@i</a></li>
                }

                @if (Model.CurrentPage < Model.TotalPage - 5)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                    <li class="page-item"><a class="page-link" onclick="getpage(@Model.TotalPage); getfilterdata();">@Model.TotalPage</a></li>
                }
                @if (Model.CurrentPage < Model.TotalPage)
                {
                    <li class="page-item"><a class="page-link" onclick="getpage(@Model.CurrentPage+1); getfilterdata();">Next</a></li>
                }
            </ul>
        </nav>
    </div>

</div>