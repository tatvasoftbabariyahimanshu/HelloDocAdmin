        // Prevent default form submission

        // Reset error messages
        let errorMessages = document.querySelectorAll(".err-msg");
        errorMessages.forEach(function (element) {
            element.textContent = ""; // Clear any existing error messages
        });

    
        let isValid = true;

      
        let provider2 = document.getElementById("provider2");
        if (!provider2.value) {
            let errorMessage = "provider  is required.";
            displayErrorMessage(provider2, errorMessage);
            isValid = false;
        }
        else{
            displayErrorMessage(provider2, "");
        }
        let changenote_ac = document.getElementById("changenote_tc");
        if (!changenote_ac.value) {
            let errorMessage = "Write Some Notes.";
            displayErrorMessage(changenote_ac, errorMessage);
            isValid = false;
        }
        else {
            displayErrorMessage(changenote_ac, "");
        }
        if (isValid) {


            return true;
        }
        else {


            return false;
        }
    }


</script>