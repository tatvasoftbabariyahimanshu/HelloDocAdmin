﻿<div class="modal fade" id="TransferCase" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header  bg-info text-white">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Transfer Request</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="TransferProvider" asp-controller="Action" onsubmit="return onsmt_TC()">
                <div class="modal-body">
                    <h6 class="modal-title">to assign  this request,select and search another physician.</h6>

                    <input type="hidden" name="requestid" id="RequestID_Input_ModelTransferCase" />
                    <div class="mb-3">
                        <div class="input-control w-100 mt-3">
                            <select class="input-outline input-outline-select "  name="region" data-allow-clear="true" tabindex="-1" onchange="myFunction2()" id="region3" asp-items="@(new SelectList(ViewBag.RegionComboBox,"RegionId","RegionName"))" data-control="select2" data-placeholder="Select Level">
                                <option value="">All Region</option>
                            </select>
                        </div>

                    </div>
                    <div class="mb-3">
                        <div class="input-control w-100 mt-3">
                            <select class="input-outline input-outline-select"  name="ProviderId" data-allow-clear="true" tabindex="-1" id="provider2" data-control="select2" data-placeholder="Select Level">
                                <option value="">All Provider</option>
                            </select>
                        </div>

                    </div>
                    <div class="inputs-control w-100 mt-2">
                        <textarea id="changenote_tc" placeholder=" " name="Notes" rows="5" class="input-outline w-100 fs-6 " type="text"></textarea>

                        <label class="inputs-lable inputs-lable-textarea fs-6" id="notedata">Notes</label>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="submit" class=" btn btn-info text-white" value="Assign">
                    <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script type="text/javascript">

    function myFunction2() {


        var region = $("#region3").val();

        $.ajax({
            type: "POST",
            url: '@Url.Action("ProviderbyRegion","Dashboard")?Regionid=' + region,
            cache: false,
            success: function (response) {

                console.log(response);
                var s = '<option value="-1">Please Select</option>';
                for (var i = 0; i < response.length; i++) {
                    s += '<option value="' + response[i].physicianid + '">' + response[i].firstname + ' ' + response[i].lastname + '</option>';
                }
                $("#provider2").html(s);
            },
            error: function () {
                alert("Error while checking email.");
            }
        });
    }

</script>
<script>
