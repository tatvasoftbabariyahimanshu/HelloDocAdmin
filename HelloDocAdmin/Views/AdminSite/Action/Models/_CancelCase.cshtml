        else {
            displayErrorMessage(CaseReasonId, "");
        }
        let changenotes_bc = document.getElementById("changenotes_bc");
        if (!CaseReasonId.value) {
            let errorMessage = "write some Notes !!!";
            displayErrorMessage(changenotes_bc, errorMessage);
            isValid = false;
        }
        else {
            displayErrorMessage(changenotes_bc, "");
        }
  

        if (isValid) {


            return true;
        }
        else {


