            <div class="modal-body">
                <h3 class="modal-title fs-5" id="exampleModalLabel">Patient Name : <span class="text-info" id="PatientName_ModelCancelCase"> </span></h3>
               
                   
                    <div class="mb-4 mt-3">
                        <div class="input-control w-100">
                            <select name="CaseTag" class="input-outline input-outline-select " data-allow-clear="true" tabindex="-1" id="CaseReasonId" asp-items="@(new SelectList(ViewBag.CaseReasonComboBox,"CaseReasonId","CaseReasonName"))" data-control="select2" data-placeholder="Cancel Reason">
                            <option value="">Cancel Reason</option>
                        </select>
                        </div>
                    </div>
                    <div class="inputs-control w-100 mt-2">
                        <textarea id="changenotes_bc" placeholder=" " name="Note" rows="5" class="input-outline w-100  " type="text"></textarea>

                        <label class="inputs-lable inputs-lable-textarea " id="notedata">Notes</label>
                    </div>
                </div>
            <div class="modal-footer">
                    <input type="submit" class=" btn btn-info text-white" value="Confirm" />
                <a  class="btn btn-outline-info" data-bs-dismiss="modal">Close</a>
            </div>
            </form>
        </div>
    </div>
</div>
