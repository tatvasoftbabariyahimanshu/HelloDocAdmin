@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
@using HelloDocAdmin.Entity.Models;
@model Healthprofessional

<div class="container">
    <div class="card bg-transparent border-0">
        <div class="card-header d-flex justify-content-between  border-0  bg-transparent p-1  mt-3 mb-2">
            <div class="text-start d-flex align-items-center">
                <h5 class="mt-2"><b> Add Vendor</b></h5>

            </div>
            <div class="text-end">
                <a asp-controller="Vendor" asp-action="Index"
                   class="btn btn-outline-info btn-back">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                         fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" />
                    </svg></i>Back
                </a>
            </div>
        </div>

        <div class="card-body rounded shadow">





            <form method="post" asp-action="Save" asp-controller="Vendor" enctype="multipart/form-data">
                <input type="hidden" asp-for="Vendorid" />
                <div class="row mt-2">
                    <div class="col-md-6 mt-2">
                        <div class=" mb-3">
                            <div class="input-control w-100 mt-3">
                                <select class="input-outline input-outline-select inp  " required  asp-for="Profession" data-allow-clear="true" tabindex="-1"  asp-items="@(new SelectList(ViewBag.ProfessionType,"HealthprofessionalID","ProfessionName"))" data-control="select2" data-placeholder="Select Level">
                                    <option value="">Select Profession Type</option>
                                </select>
                            </div>

                            <span asp-validation-for="Profession" class="err-msg"></span>

                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <div class=" mb-3">
                            <div class="inputs-control mt-3">
                                <input placeholder=" " id="Email" asp-for="Vendorname" class="input-outline w-100 inp " type="text">
                                <label class="inputs-lable">Business Name</label>
                            </div>
                            <span asp-validation-for="Vendorname" class="err-msg"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <div class=" mb-3">
                            <div class="inputs-control ">
                                <input placeholder=" " id="BusinessContact" asp-for="Faxnumber" class="input-outline w-100 inp " type="text">
                                <label class="inputs-lable">Fax Number</label>
                            </div>
                            <span asp-validation-for="Faxnumber" class="err-msg"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <div class=" mb-3">
                            <div class="inputs-control w-100 ">
                                <input id="phone" asp-for="Phonenumber" placeholder="Mobile" type="text" class=" telephone input-outline admin-input w-100 inp  " />
                             
                            </div>
                            <span id="error-msg" class="err-msg"></span>
                            <span asp-validation-for="Phonenumber" class="err-msg"></span>
                        </div>
                        </div>
                  
                    <div class="col-md-6 mt-2">
                        <div class=" mb-3">
                            <div class="inputs-control ">
                                <input placeholder=" " id="FaxNumber" asp-for="Email" class="input-outline w-100 inp " type="text">
                            <label class="inputs-lable">Email</label>
                            </div>
                        <span asp-validation-for="Email" class="err-msg"></span>
                        </div>
                    </div>
                <div class="col-md-6 mt-2">
                    <div class=" mb-3">
                        <div class="inputs-control ">
                            <input placeholder=" "  asp-for="Businesscontact" class="input-outline w-100 inp " type="text">
                            <label class="inputs-lable">Businesscontact</label>
                        </div>
                        <span asp-validation-for="Businesscontact" class="err-msg" ></span>
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class=" mb-3">
                        <div class="inputs-control ">
                            <input placeholder=" "  asp-for="Address" class="input-outline w-100 inp " type="text">
                            <label class="inputs-lable">Street</label>
                        </div>
                        <span asp-validation-for="Address" class="err-msg"></span>
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class=" mb-3">
                        <div class="inputs-control ">
                            <input placeholder=" "  asp-for="City" class="input-outline w-100 inp " type="text">
                            <label class="inputs-lable">City</label>
                        </div>
                        <span asp-validation-for="City" class="err-msg"></span>
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class=" mb-3">
                        <div class="inputs-control ">
                            <input placeholder=" "  asp-for="State" class="input-outline w-100 inp " type="text">
                            <label class="inputs-lable">State</label>
                        </div>
                        <span asp-validation-for="State" class="err-msg"></span>
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class=" mb-3">
                        <div class="inputs-control ">
                            <input placeholder=" "  asp-for="Zip" class="input-outline w-100 inp " type="text">
                            <label class="inputs-lable">Zip</label>
                        </div>
                        <span asp-validation-for="Zip" class="err-msg"></span>
                    </div>
                </div>
                </div>
           

                <div class="card-footer border-0 bg-transparent text-end">
                    <button type="submit" id="submit" class="btn btn-info text-white">Save</button>

                    <button type="reset" class="btn btn-outline-info btn-cancel ">
                        cancel
                    </button>
                </div>

            </form>
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        phone1();
    });
</script>
