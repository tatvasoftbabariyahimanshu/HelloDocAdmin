@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<form class="bg-transparent" asp-action="CreateNew" asp-controller="Login">
    @ViewData["EmailCheck"]
    <h4 class="px-4 py-4 login-hero-text">Create New Account</h4>
    <div class="inputs-control w-100 mt-3 mb-3">
        <input placeholder=" " name="Email" class="input-outline w-100 inp"
               type="email">
        <label class="inputs-lable">Email</label>
        <i class="far fa-user icon-input bg-transparent"></i>

    </div>
    <div class="inputs-control w-100 mt-3 mb-3">
        <input placeholder=" " name="Password" class="input-outline w-100 inp" id="pas2"
               type="password">
        <label class="inputs-lable">Password</label>
        <a onclick="Toggle_new1()"><i class="far fa-eye icon-input bg-transparent"></i></a>
</div>
    <div class="inputs-control w-100 mt-3 mb-3">
        <input placeholder=" " name="ConfirmPassword" class="input-outline w-100 inp" id="pas3"
               type="password">
        <label class="inputs-lable">Confirm Password</label>
        <a onclick="Toggle_new2()"><i class="far fa-eye icon-input bg-transparent" ></i></a>
</div>
     
  
    <div class="d-grid mb-3">
        <button class="btn button-login btn-primary border-0"
                type="submit">
            Create
        </button>
    </div>
    
</form>